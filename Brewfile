# https://github.com/Homebrew/homebrew-bundle

# specify a directory to install
cask_args appdir: '/Applications'

# install packages
tap 'caskroom/homebrew-cask' || true
tap 'caskroom/versions' || true
brew 'git'
brew 'node'
brew 'neovim'
brew 'lazygit'

# Casks
cask 'google-chrome'
cask 'spotify'
cask 'alacritty'

# python
brew 'python'
brew 'python3'
